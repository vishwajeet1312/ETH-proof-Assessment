pragma solidity ^0.8.18;

contract MyToken {
  string public Token_Name="Khichi";
  string public Token_Abbrv="vsk";
  uint public Token_TotalSupply=0;

mapping (address => uint) public Balance;

function mint (address T_addres,uint T_val) public {
      Token_TotalSupply += T_val;
      Balance[T_addres] +=T_val;
}

function burn (address T_addres,uint T_val) public {
     if(Balance[T_addres]>=T_val){
      Token_TotalSupply -= T_val;
      Balance[T_addres] -=T_val;
     }
}

}
